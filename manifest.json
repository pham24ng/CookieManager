{
  "manifest_version": 3,
  "name": "Hello Popup Extension",
  "version": "1.0",
  "description": "Shows a hello popup when opening a new window",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hello Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 